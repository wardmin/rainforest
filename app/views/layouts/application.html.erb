<!DOCTYPE html>
<html>
	<head>
	  <title>Rainforest</title>
	  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <meta name="viewport" content="width=device-width, initial-scale=1.0">
	  <%= csrf_meta_tags %>
	</head>
	<body>
		<div id="main-container" class="container">
			<div class="row">
				<% if flash[:notice] %>
					<p id="alert"> <%= flash[:notice] %> </p>
				<% end %>
				<% if flash[:alert] %>
					<p id="alert"><%= flash[:alert] %></p>	
				<% end %>
			</div>
		
			<%= yield %>
			<div class="row">
				<div class="col-lg-6 col-lg-offset-3">
					<p class="userinfo">
						<% if current_user %>
						Signed in as <%= current_user.name %>. <%= link_to "Log out", session_path("current"), :method => :delete %>
						<% else %>
						<%= link_to "Log in", new_session_path, :class => "btn btn-primary btn-xs"%> or <%= link_to "Sign up", new_user_path, :class => "btn btn-primary btn-xs" %>
						<% end %>
					</p>
				</div>
			</div>
		</div><!-- container close -->
	</body>
</html>
