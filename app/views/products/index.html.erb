<h1>Products#index</h1>

<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>


<div id="products">
	<ul>
	<%= render @products %>
	</ul>
</div>


<%= link_to "Add a new product", new_product_path(@product) %>